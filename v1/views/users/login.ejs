<!doctype html>
<html lang="en">
    <head>
        <%- include("./../partials/header")  %> 
        <link rel="stylesheet" href="css/login.css">
    </head>

    <body>
        <style>

        </style>

        <!---------------------------------------------------->
        <div class="logo-login">
            <h1 class="logo-login-h1">BQuiz</h1>
            <hr class="logo-line">
            <%- include("../partials/flash")  %> 
        </div>
        <div class="same-line-maker">

            <div class="form-control-nine">
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-2 login-input-div">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control home-register" type="text" id="username" name="username" placeholder="Username" size="500" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-2 login-input-div">
                        <label class="form-label" for="username">Password</label>
                        <input class="form-control home-register" type="password" id="password" name="password" placeholder="Password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="submit-btn">
                        <button class="btn btn-success submit-text">Login</button>
                    </div>
                </form>
                <hr>
                <h4 class="center-size-already">New to BQuiz?</h2>
                <div class="redirect-btn">
                    <a href="/register"><button class="btn btn-primary login-redirect-btn">Signup</button></a>
                </div>
            </div>

        </div>
    </body>





    <%- include("./../partials/btstjs")  %>
</html>