<% if(success && success.length) { %> 
    <div class="alert alert-success flash-alert-login" role="alert">
        <%= success %> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
<% }else if(error && error.length) { %> 
    <div class="alert alert-danger flash-alert-login" role="alert">
        <%= error;%> 
        <style>
            .same-line-maker{
                padding-top: 1px;
                
            }
            .moveFlash{
                margin-top: -10px;
            }
        </style>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
<% } %> 




